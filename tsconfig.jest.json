{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "module": "commonjs",
        "types": [
            "jest",
            "node",
            "@testing-library/jest-dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@components/*": [
                "./components/*"
            ],
            "@lib/*": [
                "./lib/*"
            ],
            "@ui/*": [
                "./components/ui/*"
            ],
            "@hooks/*": [
                "./hooks/*"
            ],
            "@tests/*": [
                "./tests/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "jest.setup.tsx",
        "test/setup-env.ts",
        "__mocks__/**/*"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "out",
        "tests/e2e"
    ]
}