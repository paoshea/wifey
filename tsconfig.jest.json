{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowJs": true,
        "isolatedModules": true,
        "types": [
            "jest",
            "node"
        ],
        "strict": true,
        "noEmit": true,
        "module": "commonjs",
        "target": "es2020",
        "moduleResolution": "node"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}